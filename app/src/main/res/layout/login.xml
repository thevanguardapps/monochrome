<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginActivityRlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".login">

    <ImageView
        android:id="@+id/logoinLogin"
        android:layout_width="161dp"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/userLayout"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_border">

        <EditText
            android:id="@+id/usernameInLogIn"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_action_username"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passswordLayout"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/custom_border">

        <EditText
            android:id="@+id/passwordInLogIn"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_action_password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passswordLayout"
        android:background="@color/main_color_black"
        android:onClick="logIn"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logInBtn"
        android:text="Forgot Password ?"
        android:textSize="12sp" />

</RelativeLayout>