<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginActivityRlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".login">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical|center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Login"
        android:textSize="25sp"
        android:fontFamily="@font/sfpb"
        android:textColor="#000000"/>
</LinearLayout>

    <ImageView
        android:id="@+id/groupintenticon"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/login" />

    <RelativeLayout
        android:id="@+id/userLayout"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_border">

        <EditText
            android:id="@+id/usernameInLogIn"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_action_username"
            android:ems="10"
            android:fontFamily="@font/sfpr"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passswordLayout"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_border">

        <EditText
            android:id="@+id/passwordInLogIn"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_action_password"
            android:ems="10"
            android:fontFamily="@font/sfpr"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/loginLayOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passswordLayout"
        app:cardBackgroundColor="@color/main_color_black"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/logInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/sfpr"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginLayOut"
        android:fontFamily="@font/sfpr"
        android:text="Forgot Password?"
        android:textSize="12sp" />

</RelativeLayout>