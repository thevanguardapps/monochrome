<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:contentDescription="@string/app_name"
    tools:context=".home">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical|center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Monochrome Messenger"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"/>
</LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="161dp"
        android:layout_height="152dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="110dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo"/>

    <android.support.v7.widget.CardView
        android:id="@+id/privacyLayOut"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logInLayout"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Privacy Policy"
            android:textColor="#0000ff"
            android:textSize="12sp"
            android:textStyle="normal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/disclaimerLayOut"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/privacyLayOut"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/disclaimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Disclaimer"
            android:textColor="#0000ff"
            android:textSize="12sp"
            android:textStyle="normal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/logInLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/signUpLayOut"
        android:layout_alignParentStart="true"
        android:onClick="gotoLoginActivity"
        app:cardBackgroundColor="@color/main_color_black"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/logInText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Already Have An Account? Log In"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/signUpLayOut"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:onClick="gotoSignUpActivity"
        app:cardBackgroundColor="@color/main_color_black"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Don't Have An Account? Sign Up"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
</RelativeLayout>